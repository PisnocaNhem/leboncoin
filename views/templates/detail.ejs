<div class="card mb-3" style="max-width: 100%; max-height: 100%; margin: 20px; padding: 30px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="/img/<%= announcements.photo %>" class="card-img" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
        <img class="profilPicture" src="../../public/img/user.png" alt=" ">
          <h5 class="card-title">Publiée Par : <%= announcements.name %></h5>
          <p class="price c-green fw-700">Membre depuis le : <%= announcements.created_at %> </p>
         
        </div>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title" style="text-transform: uppercase; color: black;"><%= announcements.title %></h5>
          <p class="price c-green fw-700"  style="text-transform: uppercase; color:green;"><%= announcements.price %> €</p>
          <p class="card-text"><%= announcements.description %></p>
          <p class="card-text"><small class="text-muted"><%= announcements.created_at %></small></p>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column flex-md-row justify-content-center">
        <button type="button" class="btn btn-warning btn-lg" style="margin-right: 10px;">Modifier</button>

        <button type="button" class="btn btn-danger btn-lg " style="margin-right: 10px;">Notifier</button>
        <button type="button" class="btn btn-success btn-lg ">Appeler</button>
    </div>
  </div>


  
